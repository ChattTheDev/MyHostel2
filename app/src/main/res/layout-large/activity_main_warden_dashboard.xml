<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainWardenDashboard"
    android:background="@drawable/maindashboardimage">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toTopOf="@+id/layout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="40dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="#29B6F6"
            app:cardCornerRadius="15dp"
            app:cardElevation="23dp">

            <Button
                android:id="@+id/updateroomstat"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button"
                android:text="Update Room Status"
                android:textAlignment="center"
                android:textColor="#FFEA00"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_hotelw" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#29B6F6"
            app:cardCornerRadius="15dp"
            app:cardElevation="23dp">

            <Button
                android:id="@+id/noticeuploading"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button"
                android:text="Upload Notice"
                android:textAlignment="center"
                android:textColor="#FFEA00"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_bell" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout1"
        app:layout_constraintVertical_bias="0.63">


        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="#29B6F6"
            app:cardCornerRadius="15dp"
            app:cardElevation="23dp">


            <Button
                android:id="@+id/viewcomplaints"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button"
                android:text="View Complaints"
                android:textAlignment="center"
                android:textColor="#FFEA00"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_reception" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="#29B6F6"
            app:cardCornerRadius="15dp"
            app:cardElevation="23dp">

            <Button
                android:id="@+id/viewstudents"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/button"
                android:text="View Student Details"
                android:textAlignment="center"
                android:textColor="#FFEA00"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="17dp"
                android:src="@drawable/ic_buffetw" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>